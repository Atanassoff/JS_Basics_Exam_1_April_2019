function demo(input){
    let film = input[0];
    let hall = input[1];
    let num = Number(input[2]);
    let price = 0;
    switch(film){
        case"A Star Is Born":
            switch(hall){
            case"normal":
            price = num * 7.50;
            break;
            case"luxury":
            price = num * 10.50;
            break;
            case"ultra luxury":
            price = num * 13.50;
            break;
            default:
            break;
            }
        break;
        case"Bohemian Rhapsody":
        switch(hall){
            case"normal":
            price = num * 7.35;
            break;
            case"luxury":
            price = num * 9.45;
            break;
            case"ultra luxury":
            price = num * 12.75;
            break;
            default:
            break;
        }
        break;
        case"Green Book":
        switch(hall){
            case"normal":
            price = num * 8.15;
            break;
            case"luxury":
            price = num * 10.25;
            break;
            case"ultra luxury":
            price = num * 13.25;
            break;
            default:
            break;
        }
        break;
        case"The Favourite":
        switch(hall){
            case"normal":
            price = num * 8.75;
            break;
            case"luxury":
            price = num * 11.55;
            break;
            case"ultra luxury":
            price = num * 13.95;
            break;
            default:
            break;
        }
        break;
        default:
        break;
    }
    console.log(`${film} -> ${price.toFixed(2)} lv.`);
}
